<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnHeader1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/design_default_color_primary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_button_header1" />

        <ImageButton
            android:id="@+id/btnHeader2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/design_default_color_primary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_button_header2" />

        <ImageButton
            android:id="@+id/btnHeader3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/design_default_color_primary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_button_header3" />

        <ImageButton
            android:id="@+id/btnHeader4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/design_default_color_primary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_button_header4" />

        <ImageButton
            android:id="@+id/btnHeader5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/design_default_color_primary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_button_header5" />

        <ImageButton
            android:id="@+id/btnHeader6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/design_default_color_primary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_button_header6" />

    </LinearLayout>

</ScrollView>